<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/entry_item_bg"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.6"
            >
            <TextView
                android:id="@+id/course_TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:text="Ayt - Matematik"
                android:fontFamily="@font/alegreya_sans_medium"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="21sp"
                android:textStyle="bold"

                app:drawableStartCompat="@drawable/ic_baseline_menu_book_24" />

            <TextView
                android:id="@+id/subject_textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Konu: Türev"
                android:fontFamily="@font/alegreya_sans"
                android:textColor="@color/text_color"
                app:layout_constraintStart_toStartOf="@id/course_TextView"
                app:layout_constraintTop_toBottomOf="@id/course_TextView"
                />
            <TextView
                android:id="@+id/publisher_textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="Karekök yayınları"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/date_textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:text="29/08/2021"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:fontFamily="@font/alegreya_sans"
                 />
            <TextView
                android:id="@+id/corrects_textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:text="8"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="center"
                android:textColor="@color/lime_green"
                android:textSize="24sp"
                android:drawablePadding="3dp"
                app:drawableEndCompat="@drawable/ic_baseline_check_box_24" />

            <TextView
                android:id="@+id/wrongs_textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:text="8"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="center"
                android:textColor="@color/cadmium_red"
                android:textSize="24sp"
                android:drawablePadding="3dp"
                app:drawableEndCompat="@drawable/ic_baseline_cancel_24" />

        </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>