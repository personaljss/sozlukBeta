<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:clickable="true"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/moreButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:contentDescription="sends a share Intent"
            app:srcCompat="@drawable/ic_baseline_more_horiz" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:contentDescription="like buttons"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/moreButton"
            android:layout_above="@id/commentButton"
            android:layout_marginVertical="30dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_p11" />

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/dislikeButton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_p11" />

        </RadioGroup>



        <ImageButton
            android:id="@+id/commentButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_baseline_add_comment_24" />


        <android.widget.Button
            android:id="@+id/tag1Button"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginStart="70dp"
            android:layout_alignTop="@id/moreButton"
            android:background="@drawable/tag_button"
            android:textAllCaps="false"/>

        <android.widget.Button
            android:id="@+id/tag2Button"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/tag1Button"
            android:layout_alignTop="@id/moreButton"
            android:layout_marginStart="10dp"
            android:background="@drawable/tag_button"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/entryHeaderText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignTop="@id/radioGroup"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/radioGroup"
            android:background="#ffffff"
            android:backgroundTint="#ffffff"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/entryContentText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/entryHeaderText"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/radioGroup"
            android:background="#ffffff"
            android:textAllCaps="false" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>