<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ppRotationlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/rotatePpCWBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_rotate_90_degrees_cw_24"
            android:visibility="invisible">
        </ImageButton>

        <ImageButton
            android:id="@+id/rotatePpCCWBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rotatePpCWBtn"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_rotate_90_degrees_ccw_24"
            android:visibility="invisible">
        </ImageButton>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingsPpCircleImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ppRotationlayout"
        android:src="@drawable/profile_photo" />


    <EditText
        android:id="@+id/nickNameEditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingsPpCircleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans"
        android:hint="kullanıcı adı"
        android:inputType="textPersonName" />


     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/settingsTextInputLayout"
         style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/nickNameEditTextText"
         android:layout_centerHorizontal="true">

         <AutoCompleteTextView
             android:id="@+id/degreesAutoCompleteTextView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="@font/alegreya_sans"
             android:hint="eğitim"
             android:inputType="none">

         </AutoCompleteTextView>
     </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingsTextInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Kaydet"
        android:textAllCaps="false" />


</RelativeLayout>