<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainApplication.MainActivity">

    <TextView
        android:id="@+id/userInfo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user infromation"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_toProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to profÄ±le"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfo_textView"
        app:layout_constraintVertical_bias="0.598" />

    <EditText
        android:id="@+id/userCodeEditTextMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="47"
        app:layout_constraintBottom_toTopOf="@+id/button_toProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfo_textView" />

    <Button
        android:id="@+id/go_to_forum_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forum"
        app:layout_constraintBottom_toTopOf="@+id/userInfo_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>